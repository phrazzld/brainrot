\definecolor{darkgray}{RGB}{26,26,26}

% Spacing
\setstretch{1.15}
\setlength{\parindent}{1.5em}
\setlength{\parskip}{0pt}

% Chapter styling
\titleformat{\chapter}[display]
  {\normalfont\huge\bfseries\lowercase}
  {\textcolor{brainrotpink}{\MakeUppercase{\chaptertitlename} \thechapter}}
  {20pt}
  {\Huge}
  
\titlespacing*{\chapter}{0pt}{30pt}{40pt}

% Section styling
\titleformat{\section}
  {\normalfont\Large\bfseries\color{darkgray}}
  {\thesection}{1em}{}
  
\titleformat{\subsection}
  {\normalfont\large\bfseries\color{darkgray}}
  {\thesubsection}{1em}{}

% Headers and footers
\pagestyle{fancy}
\fancyhf{}
\fancyhead[LE]{\small\textit{$title$}}
\fancyhead[RO]{\small\textit{\leftmark}}
\fancyfoot[C]{\thepage}
\renewcommand{\headrulewidth}{0.4pt}
\renewcommand{\footrulewidth}{0pt}

% First page of chapter style
\fancypagestyle{plain}{
  \fancyhf{}
  \fancyfoot[C]{\thepage}
  \renewcommand{\headrulewidth}{0pt}
  \renewcommand{\footrulewidth}{0pt}
}

% Drop caps for first letter
\renewcommand{\LettrineFontHook}{\color{brainrotpink}\bfseries}
\setlength{\DefaultNindent}{0.2em}

% Hyperref setup
\hypersetup{
    colorlinks=true,
    linkcolor=darkgray,
    filecolor=brainrotpink,
    urlcolor=brainrotpink,
    pdftitle={$title$},
    pdfauthor={$author$ (translated by $translator$)},
    pdfsubject={$subject$},
    pdfkeywords={$keywords$},
    pdfproducer={Brainrot Publishing House},
    pdfcreator={LaTeX with pandoc}
}

