{
  "name": "brainrot",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Brainrot Publishing House - Gen Z translations of classic literature",
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.15.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "echo 'Monorepo initialized. Run pnpm install to set up workspaces.'",
    "generate:formats": "tsx scripts/generate-formats.ts",
    "sync:blob": "tsx scripts/sync-translations.ts",
    "monitor": "tsx scripts/monitor-api-usage.ts",
    "monitor:dashboard": "open monitoring/dashboard.html",
    "vault:login": "dotenv-vault login",
    "vault:push": "dotenv-vault push",
    "vault:pull": "dotenv-vault pull",
    "vault:open": "dotenv-vault open",
    "vault:status": "dotenv-vault status"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/js-yaml": "^4.0.5",
    "@vercel/blob": "^1.1.1",
    "axios": "^1.7.0",
    "chalk": "^5.6.0",
    "cli-progress": "^3.12.0",
    "commander": "^11.0.0",
    "dotenv": "^16.5.0",
    "dotenv-vault": "^1.27.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.2.0",
    "p-limit": "^4.0.0",
    "prettier": "^3.3.0",
    "tsx": "^4.20.4",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phrazzld/brainrot.git"
  },
  "keywords": [
    "monorepo",
    "turborepo",
    "publishing",
    "books",
    "translations",
    "gen-z",
    "brainrot"
  ],
  "author": "Brainrot Publishing House",
  "license": "MIT",
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "tmp@<=0.2.3": ">=0.2.4",
      "lodash.template": "npm:lodash@4.17.21"
    }
  }
}