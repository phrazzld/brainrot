# Brainrot Publishing House - Environment Variables
# Copy this to .env.local and fill in the values

# Vercel Blob Storage (Required for content delivery)
# Get from: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN=vercel_blob_xxx
NEXT_PUBLIC_BLOB_BASE_URL=https://82qos1wlxbd4iq1g.public.blob.vercel-storage.com

# Vercel Deployment (For CI/CD)
# Get from: https://vercel.com/account/tokens
VERCEL_TOKEN=xxx
VERCEL_ORG_ID=xxx
VERCEL_PROJECT_ID=xxx

# Publishing Platforms (For automation)
# Lulu API - Get from: https://developers.lulu.com/
LULU_API_KEY=xxx
LULU_API_SECRET=xxx

# Amazon KDP (For browser automation)
# Warning: Store securely, consider using keychain
KDP_EMAIL=xxx
KDP_PASSWORD=xxx

# Optional: Analytics & Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=xxx
SENTRY_DSN=xxx

# Optional: AI Services (For future translation automation)
OPENAI_API_KEY=xxx
ANTHROPIC_API_KEY=xxx

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (Future: for user accounts, analytics)
# DATABASE_URL=postgresql://user:password@localhost:5432/brainrot

# Email Notifications (For publishing alerts)
# RESEND_API_KEY=xxx
# NOTIFICATION_EMAIL=team@brainrot.pub

# Slack Webhook (For deployment/publishing notifications)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx