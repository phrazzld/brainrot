{
  "buildCommand": "cd ../.. && pnpm install --frozen-lockfile && pnpm build --filter=@brainrot/web",
  "outputDirectory": ".next",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "devCommand": "next dev",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet -- apps/web packages",
  "github": {
    "silent": true
  },
  "functions": {
    "app/api/download/[slug]/[file].ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/assets/:path*",
      "destination": "https://82qos1wlxbd4iq1g.public.blob.vercel-storage.com/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/sync-content",
      "schedule": "0 5 * * *"
    }
  ]
}
