{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": false,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@brainrot/types": ["../../packages/@brainrot/types/src"],
      "@brainrot/types/*": ["../../packages/@brainrot/types/src/*"],
      "@brainrot/converter": ["../../packages/@brainrot/converter/src"],
      "@brainrot/converter/*": ["../../packages/@brainrot/converter/src/*"],
      "@brainrot/blob-client": ["../../packages/@brainrot/blob-client/src"],
      "@brainrot/blob-client/*": ["../../packages/@brainrot/blob-client/src/*"],
      "@brainrot/metadata": ["../../packages/@brainrot/metadata/src"],
      "@brainrot/metadata/*": ["../../packages/@brainrot/metadata/src/*"],
      "@brainrot/templates": ["../../packages/@brainrot/templates"],
      "@brainrot/templates/*": ["../../packages/@brainrot/templates/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "scripts/**/*", "__tests__/**/*"]
}
